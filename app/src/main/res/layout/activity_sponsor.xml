<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context=".Sponsor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sponsor    "
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/RegisterFullName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="Enter your name"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:textColor="#221B1B"
            android:textColorHint="#000"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registrationIDPhoneNumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:hint="Enter your Phone number"
            android:inputType="number|phone"
            android:padding="10dp"
            android:textColor="#221B1B"
            android:textColorHint="#000"
            android:textSize="18sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginEmail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColor="#221B1B"
            android:textColorHint="#000"
            android:textSize="18sp" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginPassword1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:hint="Enter your password"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#221B1B"
            android:textColorHint="#000"
            android:textSize="18sp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/city1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your city"
            android:textStyle="bold"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#221B1B"
            android:textColorHint="#000"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/editTextTextPostalAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter your Adddress"
            android:textStyle="bold"
            android:padding="10dp"
            android:inputType="textPostalAddress" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your account No"
            android:textStyle="bold"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#221B1B"
            android:textColorHint="#000"
            android:textSize="18sp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your amount in Rs "
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="#221B1B"
             android:textStyle="bold"
            android:textColorHint="#000"
            android:textSize="18sp"
            />



        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Pay Now"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/regPageQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:foregroundTint="#322727"
            android:gravity="center"
            android:text="Have an account? Login"

            android:textAllCaps="false" />


    </LinearLayout>

</ScrollView>
